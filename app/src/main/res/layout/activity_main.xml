<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent" />

    <agersant.polaris.ui.BackdropMenu
        android:id="@+id/backdrop_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:backdropLayout="@id/backdrop_layout"
        app:layout_constraintTop_toBottomOf="@id/toolbar">

        <com.google.android.material.navigation.NavigationView
            android:id="@+id/backdrop_nav"
            style="@style/BackdropNavigation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollIndicators="none"
            android:scrollbarSize="0dp"
            android:scrollbars="none"
            app:menu="@menu/menu_backdrop" />

    </agersant.polaris.ui.BackdropMenu>

    <agersant.polaris.ui.BackdropLayout
        android:id="@+id/backdrop_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:elevation="4dp"
        app:layout_constraintBottom_toTopOf="@id/bottom_nav"
        app:layout_constraintTop_toBottomOf="@id/toolbar">

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/nav_host_fragment"
            android:name="androidx.navigation.fragment.NavHostFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:defaultNavHost="true"
            app:navGraph="@navigation/nav_graph" />

    </agersant.polaris.ui.BackdropLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?colorHeaderBackground"
        app:itemBackground="?colorHeaderBackground"
        app:itemIconTint="@drawable/bottom_navigation_item"
        app:itemTextColor="@drawable/bottom_navigation_item"
        app:layout_constraintBottom_toBottomOf="parent"
        app:menu="@menu/menu_bottom_navigation" />

</androidx.constraintlayout.widget.ConstraintLayout>
