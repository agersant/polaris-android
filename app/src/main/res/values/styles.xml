<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="Polaris" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowBackground">@color/background</item>
        <item name="colorPrimary">@color/primary</item> <!--Task manager toolbar-->
        <item name="colorPrimaryDark">@color/primaryVariant</item> <!--Status bar background-->
        <item name="colorPrimaryVariant">@color/primaryVariant</item>
        <item name="colorAccent">@color/primary</item> <!--Media player seek bar-->
        <item name="colorSecondary">@color/primary</item>
        <item name="colorSecondaryVariant">@color/primary</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:background">@android:drawable/divider_horizontal_bright</item>
    </style>

    <style name="PolarisToolbar" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:background">@color/primary</item>
    </style>

    <style name="PolarisToolbarMenu" parent="@style/ThemeOverlay.AppCompat.Light">
        <item name="android:background">@color/background</item>
    </style>

    <style name="PolarisButton">
        <item name="android:background">@color/background</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/blueGrey700</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="ExplorerButton" parent="@style/PolarisButton">
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
    </style>

</resources>
